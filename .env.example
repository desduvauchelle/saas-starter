# =============================================================================
# REQUIRED - these must be set for the app to run
# =============================================================================

# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/mydb"

# Auth.js secret — generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"

# Canonical app URL
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# OAUTH PROVIDERS (optional — presence enables the provider)
# =============================================================================

# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# APPLE_CLIENT_ID=""
# APPLE_CLIENT_SECRET=""

# Set to "true" to enable magic-link login (requires email config)
# MAGIC_LINK_ENABLED="false"

# =============================================================================
# EMAIL (optional — required for magic links, password reset, contact form)
# =============================================================================

# RESEND_API_KEY=""
# EMAIL_FROM="noreply@yourdomain.com"

# =============================================================================
# STRIPE (optional — required for payments)
# =============================================================================

# STRIPE_SECRET_KEY="sk_test_..."
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# =============================================================================
# FILE STORAGE (optional — pick one provider)
# =============================================================================

# "vercel" or "s3"
# STORAGE_PROVIDER="vercel"

# Vercel Blob
# BLOB_READ_WRITE_TOKEN=""

# AWS S3
# AWS_S3_BUCKET=""
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="us-east-1"

# =============================================================================
# APPLICATION
# =============================================================================

# NEXT_PUBLIC_APP_NAME="SaaS Starter"
# NEXT_PUBLIC_APP_URL="http://localhost:3000"
# NODE_ENV="development"

# =============================================================================
# ADMIN ROLES — comma-separated emails
# =============================================================================

# Users with these emails get OWNER or ADMIN role on first login
# OWNER_EMAILS="owner@example.com"
# ADMIN_EMAILS="admin1@example.com,admin2@example.com"
